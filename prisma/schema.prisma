// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DBURL")
}

// Enums
enum UserRole {
  SUPER_ADMIN  // App owner, full access to everything
  STORE_ADMIN  // Store owner/admin, manages their store
  STORE_USER   // Regular user within a store
}

enum UserStatus {
  PENDING   // Awaiting approval
  APPROVED  // Approved and can login
  REJECTED  // Rejected
}

// Shopify OAuth Session (for app installation)
// These fields are required by @shopify/shopify-app-session-storage-prisma package
model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean   @default(false)
  emailVerified Boolean   @default(false)
  refreshToken  String?
  refreshTokenExpires DateTime?

  @@index([shop])
}

// Store/Shop data
model Store {
  id            String    @id @default(cuid())
  shopDomain    String    @unique
  shopName      String?
  storeOwnerName   String?
  contactEmail  String?
  themeColor    String?
  accessToken   String?
  scope         String?
  logo          String?
  submissionEmail String?
  companyWelcomeEmailTemplate String?  // Custom template for company sync emails
  companyWelcomeEmailEnabled Boolean   @default(true)  // Enable/disable company sync notifications
  isActive      Boolean   @default(true)
  installedAt   DateTime  @default(now())
  uninstalledAt DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  users                  User[]
  registrationSubmissions RegistrationSubmission[]
  companyAccounts        CompanyAccount[]
  b2bOrders              B2BOrder[]    @relation("StoreOrders")

  @@index([shopDomain])
}

// User accounts (for your B2B portal)
model User {
  id           String        @id @default(cuid())
  email        String        @unique
  firstName    String?
  lastName     String?
  password     String        // Password hash
  role         UserRole      @default(STORE_USER)
  status       UserStatus    @default(PENDING)
  isActive     Boolean       @default(true)

  // Shopify customer relationship
  shopifyCustomerId String?   // Shopify customer GID for linking to Shopify profile

  // Store relationship (null for super admins)
  shopId       String?
  shop         Store?        @relation(fields: [shopId], references: [id], onDelete: Cascade)

  // Company relationship (for B2B users)
  companyId    String?
  company      CompanyAccount? @relation("CompanyUsers", fields: [companyId], references: [id], onDelete: Cascade)
  companyRole  String?       // member, approver, admin

  // Relations
  sessions     UserSession[]
  ordersCreated B2BOrder[]   @relation("UserCreatedOrders")

  // Metadata
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  @@index([email])
  @@index([shopId])
  @@index([role])
  @@index([companyId])
}

// User sessions (for login/logout)
model UserSession {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([token])
  @@index([userId])
}

// B2B Registration Submissions
model RegistrationSubmission {
  id              String    @id @default(cuid())
  companyName     String
  contactName     String
  email           String
  phone           String
  businessType    String
  website         String?
  additionalInfo  String?

  // Store relationship
  shopId          String
  shop            Store     @relation(fields: [shopId], references: [id], onDelete: Cascade)

  // Status tracking
  status          UserStatus @default(PENDING)
  reviewedAt      DateTime?
  reviewedBy      String?   // User ID who reviewed
  reviewNotes     String?   // Admin notes on the review

  // Shopify workflow tracking
  shopifyCustomerId  String?  // Shopify customer GID
  workflowCompleted  Boolean  @default(false)

  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@index([shopId])
  @@index([email])
  @@index([status])
}

// Store-level company records for credit management
model CompanyAccount {
  id               String   @id @default(cuid())
  shopId           String
  shop             Store    @relation(fields: [shopId], references: [id], onDelete: Cascade)

  shopifyCompanyId String?  // Shopify company GID
  name             String
  contactName      String?
  contactEmail     String?

  creditLimit      Decimal  @default(0) @db.Decimal(14, 2)
  paymentTeam      String?

  users            User[]               @relation("CompanyUsers")
  orders           B2BOrder[]           @relation("CompanyAccountOrders")
  creditTransactions CreditTransaction[]

  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@index([shopId])
  @@unique([shopId, shopifyCompanyId])
}

// Wishlist Models
model Wishlist {
  id          String   @id @default(cuid())
  name        String

  customerId  String   // Shopify Customer ID
  shop        String   // Shop domain

  // Optional: Link to a specific location if needed.
  locationId  String?

  items       WishlistItem[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([customerId, shop])
}

model WishlistItem {
  id          String   @id @default(cuid())
  wishlistId  String
  wishlist    Wishlist @relation(fields: [wishlistId], references: [id], onDelete: Cascade)

  productId   String   // Shopify Product GID
  variantId   String   // Shopify Variant GID
  productTitle String?
  variantTitle String?
  image       String?  // URL of the product image
  price       Float    @default(0) // Unit price
  quantity    Int      @default(1)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([wishlistId])
}

model Notification {
  id                 String   @id @default(cuid())
  receiverId         String?
  adminReceiverId    String?
  senderId           String?
  message            String
  activityType       String?
  activeAction       String?  // URL for the action/product
  isRead             Boolean   @default(false)
  // Shop relation
  shopId        String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([receiverId])
  @@index([senderId])
  @@index([shopId])
}

model OrderPayment {
  id           String   @id @default(cuid())

  orderId      String
  order        B2BOrder @relation(fields: [orderId], references: [id], onDelete: Cascade)

  amount       Decimal  @db.Decimal(14, 2)
  method       String?  // credit, card, bank_transfer
  status       String   @default("pending")  // pending, received, failed, refunded
  receivedAt   DateTime?

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([orderId])
  @@index([status])
}

model B2BOrder {
  id               String   @id @default(cuid())

  companyId        String
  company          CompanyAccount @relation("CompanyAccountOrders", fields: [companyId], references: [id], onDelete: Cascade)

  createdByUserId  String
  createdByUser    User @relation("UserCreatedOrders", fields: [createdByUserId], references: [id])

  shopId           String
  shop             Store     @relation("StoreOrders", fields: [shopId], references: [id], onDelete: Cascade)

  shopifyOrderId   String?   // Synced with Shopify

  orderTotal       Decimal   @db.Decimal(14, 2)
  creditUsed       Decimal   @db.Decimal(14, 2)  // How much credit was used for this order

  // Payment tracking
  paymentStatus    String    @default("pending")   // pending, partial, paid, cancelled
  orderStatus      String    @default("draft")     // draft, submitted, processing, shipped, delivered, cancelled
  paidAmount       Decimal   @default(0) @db.Decimal(14, 2)
  remainingBalance Decimal   @db.Decimal(14, 2)

  // Relations
  payments         OrderPayment[]

  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  paidAt           DateTime?

  @@index([companyId])
  @@index([shopId])
  @@index([paymentStatus])
  @@index([createdByUserId])
}


model CreditTransaction {
  id               String   @id @default(cuid())

  companyId        String
  company          CompanyAccount @relation(fields: [companyId], references: [id], onDelete: Cascade)

  orderId          String?     // Nullable if not order-related

  transactionType  String      // order_created, order_paid, order_cancelled, credit_adjustment, payment_received
  creditAmount     Decimal   @db.Decimal(14, 2)  // Amount changed (can be negative)
  previousBalance  Decimal   @db.Decimal(14, 2)
  newBalance       Decimal   @db.Decimal(14, 2)

  notes            String?
  createdBy        String      // User ID or "system"

  createdAt        DateTime  @default(now())

  @@index([companyId])
  @@index([transactionType])
}
